{
    "openapi": "3.0.0",
    "info": {
        "title": "API Contact",
        "version": "1.0"
    },
    "servers": [
        {
            "url": "http://localhost:8000"
        }
    ],
    "paths": {
        "/api/contact/store": {
            "post": {
                "summary": "Guardar datos de contacto",
                "operationId": "App\\Http\\Controllers\\ContactController::store",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "email": {
                                        "type": "string"
                                    },
                                    "phone": {
                                        "type": "string"
                                    },
                                    "message": {
                                        "type": "string"
                                    }
                                },
                                "type": "object",
                                "example": {
                                    "name": "betox",
                                    "email": "alberto.urbaez@25watts.com.ar",
                                    "phone": "+54 9 351 370000",
                                    "message": "Test de envio de email"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                }
            }
        }
    },
    "security": [
        []
    ]
}